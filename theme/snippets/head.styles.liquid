<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
{%- liquid
  assign body_body_light = settings.type_body_font | font_modify: 'weight', '-100'
  assign body_body_medium = settings.type_body_font | font_modify: 'weight', '+100'
  assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bolder'
  assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
  assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
%}

{% style %}
  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ body_body_light | font_face: font_display: 'swap' }}
  {{ body_body_medium | font_face: font_display: 'swap' }}
  {{ body_font_bold | font_face: font_display: 'swap' }}
  {{ body_font_italic | font_face: font_display: 'swap' }}
  {{ body_font_bold_italic | font_face: font_display: 'swap' }}

  :root {
    --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    --font-header-nav: {{ settings.header_nav_font.family }}, {{ settings.header_nav_font.fallback_families }};
    --font-title-base: {{ settings.title_base_font.family }}, {{ settings.title_base_font.fallback_families }};

    --color-dark: #262523;
    --color-accent: #4BAE4F;
    --color-grey: #f5f4f4;
    --color-white: #fff;

    --color-border: #e4e6e8;
    --color-button-background: #262523;
    --color-button-text: #fff;

    --duration-short: 100ms;
    --duration-default: 200ms;
    --duration-long: 500ms;

    /* Layout vars */

    --page-width: {{ settings.page_width }}px;
    --page-width-mobile: {{ settings.page_width_mobile }};
    --page-width-tablet: {{ settings.page_width_tablet }};

    /* Color variables */
    --color-block-main: {{ settings.color_main }};
    --color-block-accent:{{ settings.color_accent }};
    --color-block-secondary:{{ settings.color_secondary }};
    --color-text-base: {{ settings.color_font_main }};
    --color-text-secondary: {{ settings.color_font_secondary }};
    --color-text-accent: {{ settings.color_font_accent }};
    --color-active: {{ settings.color_active }};
    --color-success: #1e892a;
    --color-error: #d10300;
    --color-warning: #c87100;



  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  html {
    box-sizing: border-box;
    font-size: 10px;
    {% comment %}font-size: calc(10 / 375 * 100vw);{% endcomment %}
    height: 100%;
  }

  {% comment %}
  @media screen and (min-width: 750px) {
    html {
      font-size: calc(10 / 992 * 100vw);
    }
  }

  @media screen and (min-width: 990px) {
    html {
      font-size: calc(10 / 1440 * 100vw);
    }
  }
  {% endcomment %}


  body {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 100%;
    width: 100%;
    min-height: 100%;
    margin: 0;
    font-family: var(--font-body-family);
    color: var(--color-dark);
    font-size: 1.4rem;
    letter-spacing: 0;
    line-height: 1.5;
    font-weight: 500;
    box-sizing: border-box;
  }
{% endstyle %}

<link rel="stylesheet" href="{{ 'base.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'base-new.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet"  href="{{ 'base-new-tablet.css' | asset_url }}" media="print" onload="this.media='all and (max-width: {{ settings.breakpoint_tablet }}px)'">
<link rel="stylesheet"  href="{{ 'base-new-mobile.css' | asset_url }}" media="print" onload="this.media='all and (max-width: {{ settings.breakpoint_mobile }}px)'">
<link rel="stylesheet" href="{{ 'component-product-card.css' | asset_url }}" media="print" onload="this.media='all'">
{% comment %}<link rel="stylesheet" href="{{ 'swiper.css' | asset_url }}" media="print" onload="this.media='all'">{% endcomment %}
{% comment %}<link rel="stylesheet" href="{{ 'fancybox.css' | asset_url }}" media="print" onload="this.media='all'">{% endcomment %}
